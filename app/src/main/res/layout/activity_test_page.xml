<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestPageActivity">



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Instruction String"


        android:id="@+id/instruction" android:textSize="14sp"
        style="@style/Base.Widget.MaterialComponents.TextInputEditText"
        android:background="?attr/actionBarItemBackground"

        android:layout_marginStart="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"/>/>

    <Button
        android:id="@+id/sendInstruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/instruction"
        android:layout_marginTop="80dp"

        android:layout_marginStart="50dp"
        app:layout_constraintStart_toStartOf="parent"

        android:text="Send Instruction"/>


    <Button
        android:id="@+id/TestPageBackToProduct"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:text="Back"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sendInstruction" />



</androidx.constraintlayout.widget.ConstraintLayout>